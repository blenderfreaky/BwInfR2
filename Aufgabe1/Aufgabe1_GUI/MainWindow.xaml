<material:MaterialWindow x:Class="Aufgabe1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aufgabe1"
        xmlns:material="clr-namespace:MaterialDesign2.Controls;assembly=MaterialDesign2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <material:PanBorder>
            <Grid Background="White" MouseMove="Navmap_Move" >
                <Canvas x:Name="Navmap" Margin="0" Loaded="Navmap_Loaded"/>
                <Canvas x:Name="Polygons" Margin="0" Loaded="Polygons_Loaded"/>
                <Canvas x:Name="Buspath" Margin="0" Loaded="Buspath_Loaded"/>
            </Grid>
        </material:PanBorder>
    </Grid>
</material:MaterialWindow>
