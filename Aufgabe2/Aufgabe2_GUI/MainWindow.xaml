<material:MaterialWindow x:Class="Aufgabe2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aufgabe2"
        xmlns:material="clr-namespace:MaterialDesign2.Controls;assembly=MaterialDesign2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <material:PanBorder>
            <Grid x:Name="Off" Background="White" MouseMove="Navmap_Move">
                <Grid x:Name="Back">
                    <Canvas x:Name="Triangles" Margin="0" Loaded="Polygons_Loaded"/>
                    <Canvas x:Name="Debugging" Margin="0" Loaded="Navmap_Loaded"/>
                    <Line X1="-1E+99" X2="1E+99" Stroke="Black" Fill="Black" StrokeThickness="2"/>
                </Grid>
            </Grid>
        </material:PanBorder>
    </Grid>
</material:MaterialWindow>
